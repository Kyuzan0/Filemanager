/* Optimistic UI Pagination Styles */
.pagination-optimistic {
  position: relative;
  transition: all 0.2s ease;
}

.pagination-optimistic::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16px;
  height: 16px;
  margin: -8px 0 0 -8px;
  border: 2px solid rgba(37, 99, 235, 0.3);
  border-top: 2px solid #2563eb;
  border-radius: 50%;
  animation: optimistic-spin 0.8s linear infinite;
  opacity: 0;
  transition: opacity 0.2s ease;
  pointer-events: none;
}

.pagination-optimistic.loading::after {
  opacity: 1;
}

.pagination-optimistic.loading {
  opacity: 0.7;
  transform: scale(0.98);
}

@keyframes optimistic-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Subtle loading indicator for pagination */
.pagination-subtle-loading {
  position: relative;
}

.pagination-subtle-loading::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(90deg,
    rgba(37, 99, 235, 0.1) 0%,
    rgba(37, 99, 235, 0.2) 50%,
    rgba(37, 99, 235, 0.1) 100%);
  border-radius: inherit;
  animation: subtle-pulse 1.5s ease-in-out infinite;
  z-index: -1;
}

@keyframes subtle-pulse {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

/* Enhanced transitions for pagination buttons */
.pagination-btn {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.pagination-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.3s ease, height 0.3s ease;
}

.pagination-btn:active::before {
  width: 100px;
  height: 100px;
}

/* Optimistic state for page info */
.pagination-info-optimistic {
  transition: all 0.2s ease;
}

.pagination-info-optimistic.updating {
  opacity: 0.6;
  transform: translateY(-1px);
}

/* Error state for pagination */
.pagination-error {
  animation: shake 0.5s ease-in-out;
  background-color: rgba(239, 68, 68, 0.1) !important;
  border-color: rgba(239, 68, 68, 0.3) !important;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-4px); }
  75% { transform: translateX(4px); }
}

/* Success state for pagination */
.pagination-success {
  animation: success-pulse 0.6s ease-out;
}

@keyframes success-pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* Disabled state with optimistic feedback */
.pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

.pagination-btn.optimistic-disabled {
  opacity: 0.7;
  cursor: wait;
  position: relative;
}

.pagination-btn.optimistic-disabled::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 12px;
  height: 12px;
  margin: -6px 0 0 -6px;
  border: 1px solid rgba(37, 99, 235, 0.3);
  border-top: 1px solid #2563eb;
  border-radius: 50%;
  animation: optimistic-spin 0.8s linear infinite;
}

/* Mobile optimizations for optimistic pagination */
@media (max-width: 767px) {
  .pagination-optimistic::after {
    width: 14px;
    height: 14px;
    margin: -7px 0 0 -7px;
  }
  
  .pagination-btn.optimistic-disabled::after {
    width: 10px;
    height: 10px;
    margin: -5px 0 0 -5px;
  }
}

