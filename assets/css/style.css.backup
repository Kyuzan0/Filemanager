/* Loading indicator */
.loader-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 10000;
}

.loader-inner {
  background: var(--card);
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 12px;
  min-width: 200px;
  transition: background-color 0.3s ease;
}

[data-theme="dark"] .loader-inner {
  background: var(--card);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.6);
}

.loader-inner svg {
  width: 24px;
  height: 24px;
  animation: spin 1s linear infinite;
  color: var(--accent);
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loader-inner span {
  font-size: 14px;
  color: var(--muted);
}

/* Breadcrumb styling */
#breadcrumbs {
  display: flex;
  gap: 4px;
  flex-wrap: wrap;
  font-size: 13px;
}

#breadcrumbs span {
  cursor: pointer;
  color: var(--accent);
  padding: 2px 4px;
  border-radius: 4px;
  transition: background-color 0.2s ease;
}

#breadcrumbs span:hover {
  background: var(--glass);
}

#breadcrumbs span:first-child {
  color: var(--muted);
  cursor: default;
}

#breadcrumbs span:first-child:hover {
